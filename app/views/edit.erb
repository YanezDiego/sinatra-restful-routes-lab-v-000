<form action="/recipes/<%= @recipes.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name:<input id="recipe_name" type="text" name="name" value="<%=@recipes.name%>"><br>
  Ingredients:<input id="ingredients_name" type="text" name="ingredients" value="<%=@recipes.ingredients%>"><br>
  Cook Time:<br><input id="cook_time" type="text" name="cook_time" value="<%=@recipes.cook_time%>">
  <input type="submit" value="submit">
</form>
